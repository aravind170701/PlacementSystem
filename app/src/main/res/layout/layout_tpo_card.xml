<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_viewtpo"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="16dp"
    android:clickable="true"
    card_view:cardCornerRadius="12dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:contentPadding="10dp"
    tools:context=".fragments.admin.RecyclerViewAdapterTPO">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tponameview"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:fontFamily="sans-serif-black"
            android:gravity="top"
            android:text="TPO Name: "
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.058"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.771" />

        <TextView
            android:id="@+id/tponame"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:layout_marginStart="72dp"
            android:fontFamily="sans-serif-black"
            android:gravity="end|center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/tponameview"
            card_view:layout_constraintTop_toBottomOf="@+id/tpoid"
            card_view:layout_constraintVertical_bias="0.529" />

        <TextView
            android:id="@+id/tpoidview"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-black"
            android:text="TPO ID: "
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            card_view:layout_constraintBottom_toTopOf="@+id/tponameview"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.058"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.379" />

        <TextView
            android:id="@+id/tpoid"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:fontFamily="sans-serif-black"
            android:gravity="end|center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.413"
            card_view:layout_constraintStart_toEndOf="@+id/tpoidview"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.228" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>



